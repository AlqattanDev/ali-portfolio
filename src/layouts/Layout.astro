      .ascii-name {
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
      }

      /* Browser optimizations */
      .view-switcher {
        -webkit-tap-highlight-color: rgba(0, 255, 65, 0.3);
        -webkit-touch-callout: none;
