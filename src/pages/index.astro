---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import ProjectEntry from '../components/ProjectEntry.astro';
import Skills from '../components/Skills.astro';
import Education from '../components/Education.astro';
import profile from '../data/profile.json';
---

<Layout>
    <Header />

    <main id="main-content" class="flex-container" role="main">
        <section class="execute-protocol" aria-labelledby="contact-heading" data-component="contact-info">
            <h2 id="contact-heading" class="sr-only">Contact Information</h2>
            <p class="terminal-command">$ ./contact --all</p>
            <p class="comment">// Establishing secure connection...</p>
            <div class="flex-container">
                <p>Email: <a href={`mailto:${profile.personal.email}`} aria-label={`Send email to ${profile.personal.email}`}>{profile.personal.email}</a></p>
                <p>LinkedIn: <a href={`https://${profile.personal.linkedin}`} target="_blank" rel="noopener noreferrer" aria-label="Visit LinkedIn profile (opens in new tab)">{profile.personal.linkedin}</a></p>
                <p>GitHub: <a href={`https://${profile.personal.github}`} target="_blank" rel="noopener noreferrer" aria-label="Visit GitHub profile (opens in new tab)">{profile.personal.github}</a></p>
                <p>System Log: <a href="/ali-portfolio/blog/" aria-label="Read blog posts">blog/</a></p>
            </div>
        </section>

        <Section title="PROJECT_MANIFEST">
            <div class="projects-grid" data-component="projects">
                {profile.projects.map((project, index) => (
                    <ProjectEntry project={project} index={index} />
                ))}
            </div>
        </Section>

        <Section title="SKILL_MATRIX">
            <div data-component="skills">
                <Skills skills={profile.skills} />
            </div>
        </Section>

        <Section title="EDUCATION_LOG">
            <div data-component="education">
                <Education edu={profile.education} />
            </div>
        </Section>

        <footer class="checksum" role="contentinfo" aria-label="Document integrity checksum">
            Document Checksum: {profile.checksum}
        </footer>
    </main>
</Layout>

