---
const { skills } = Astro.props;
---

<div class="skills-grid">
    {skills.map(category => (
        <div class="skill-category">
            <div class="skill-header">{category.header}</div>
            {category.items.map(item => (
                <div class="skill-item">
                    <span>{item.name}</span>
                    <span class="skill-level">{item.level}</span>
                </div>
            ))}
        </div>
    ))}
</div>

